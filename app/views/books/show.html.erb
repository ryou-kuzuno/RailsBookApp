<div class="card">
    <div>
      <div class="card-img">画像</div>
      <div class="card-right">
      <h1><%= @book.author%></h1>
      <h2><%= @book.title %></h2>
      </div>
    </div>
      <p><%= @book.story %></p>
      <p><%= @book.impressions %></p>
      <div class="card-under"> 
        <div >
        <% if Like.find_by(user_id: @current_user.id, book_id: @book.id) %>
          <%= link_to "/likes/#{@book.id}/destroy", {method: "post"} do %>
            <span class="material-icons hart">favorite</span>
          <% end %>
        <% else %>
          <%= link_to "/likes/#{@book.id}/create", {method: "post"}  do %>
              <span class="material-icons hart">favorite</span>
          <% end %>
        <% end %>
          <%= @likes_count %>
          <p>コメント機能の実装</p>
          <span class="material-icons speech">question_answer</span>
        </div>
        <div>
        <%= link_to "編集", "/#{@book.id}/edit"%>
        <%= link_to "戻る", "/"%>
      </div>
    </div>
</div>

