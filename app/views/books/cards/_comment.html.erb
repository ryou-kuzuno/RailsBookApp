<% if @comment %>
  <% @comment.each do |com| %>
        <div class="posts-index-item">
          <div class="post-right">
            <div class="post-user-name">
              <%= com.comment %>
            </div>
          </div>
        </div>
  <% end %>
<% end %>

<div>
  <%= form_for @new_comment, url: { controller: :comments, action: :reply } do |form|%>
    <div>
      <%= form.label :コメント %>
      <%= form.text_field :comment %>
    </div>
    <%= form.submit 'コメントする ' %>
  <% end%>
</div>
