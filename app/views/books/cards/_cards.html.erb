
<% @books.zip(@impressions).each do |book , impression| %>
  <div class="card-poket">
    <div class="card">
        <%= book.thumbnail %>
        <div class="card-right">
          <div class="title">
          <p>作者</p>
            <%= book.title %>
          </div>
          <div class="author">
            <p>タイトル</p>
            <%= book.author %>
          </div>
        </div>
      <div class="card-text">
      <p>題名</p>
        <div class="story">
          <%= impression.story %>
        </div>
        <%# <div class="impressions">
          <%= impression.impressions %>
        <%# </div>  %>
      </div>
      <div class="card-under">
          <i class="material-icons hart">favorite</i>
        <div>
          <%= link_to "詳細", "/show/#{impression.id}" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

