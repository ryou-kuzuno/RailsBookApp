<% if @comments %>
  <% @comments.each do |com| %>
        <div class="posts-index-item">
          <div class="post-right">
            <div class="post-user-name">
              <%= com.user_id%>
              <%= com.comment %>
            </div>
          </div>
        </div>
  <% end %>
<% end%>
<div>
    <%= form_for @new_comment, url: { controller: :comments, action: :reply } do |form|%>
        <div>
          <%= form.label :コメント %>
          <%= form.text_field :comment %>
          <%# 見えないけれどフォームに送信される。 %>
          <%= form.hidden_field :user_id ,:value => "#{session[:user_id]}" %>
          <%= form.hidden_field :book_id ,:value => "#{session[:book_id]}" %>
        </div>
        <%= form.submit 'コメントする ' %>
    <% end%>
</div>