<h2><%= @user.nicename %></h2>
      <p><%= @user.mail %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>

    <ul class="user-tabs">
      <li class="active"><%= link_to "投稿", "/users/#{@user.id}" %></li>
      <li><%= link_to "お気に入り", "/#{@user.id}/likes" %></li>
    </ul>

    <% @user.bookstores.each do |book| %>
      <div class="posts-index-item">
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to book.user.name, "/users/#{book.user.id}" %>
          </div>
          <%= link_to book.content, "/show/#{book.id}" %>
        </div>
      </div>
    <% end %>