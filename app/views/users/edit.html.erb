<% @user.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>

<%= form_for @user, url: {controller: :users, action: :update} do |form| %>
  <div>
    <%= form.label :ユーザー名 %>
    <%= form.text_field :nicename %>
  </div>
  <div>
    <%= form.label :メールアドレス %>
    <%= form.email_field :mail %>
  </div>
  <div>
    <%= form.submit '保存' %>
  </div>
<% end %>