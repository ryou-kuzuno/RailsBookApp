<% @user.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>

<%= form_for(@user, url: user_path(@user), html: {method: "patch"}) do |form| %>
  <div>
    <%= form.label :ユーザー名 %>
    <%= form.text_field :nicename ,value="<%= form.nicename %>"%>
  </div>
  <div>
    <%= form.label :メールアドレス %>
    <%= form.email_field :mail ,value="<%= form.mail %>"%>
  </div>
  <div>
    <%= form.submit '保存' %>
  </div>
<% end %>